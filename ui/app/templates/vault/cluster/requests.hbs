<PageHeader as |p|>
  <p.levelLeft>
    <h1 class="title is-3">
      HTTP Request Volume
    </h1>
  </p.levelLeft>
</PageHeader>

{{#if model.counters}}
  {{!--
    <HttpRequestsBarChart @counters=counters />
  --}}
    <Toolbar>
      <label for="date-range" class="is-label">
        Date Range
      </label>
      <select
        id="date-range"
        name="selectedTimeWindow"
        data-test-timeWindow-select
        >
        <option>All</option>
        <option>Last 12 Months</option>
      </select>
    </Toolbar>
    <AlertInline @type="info" @message="Metrics are recorded only for interactions that produce or use a Vault token." />
    <HttpRequestsTable @counters={{model.counters}} />
{{else}}
  <EmptyState @title={{'There were no requests recorded'}}/>
{{/if}}
